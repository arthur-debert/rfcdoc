{
  "name": "rfcdoc-format",
  "displayName": "RfcDoc Format",
  "description": "Syntax highlighting for RfcDoc format",
  "version": "0.5.0",
  "publisher": "rfcdoc",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "rfcdoc",
    "documentation",
    "plain text",
    "syntax highlighting"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rfcdoc",
        "aliases": [
          "RfcDoc",
          "rfcdoc"
        ],
        "extensions": [
          ".txtx",
          ".rfc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rfcdoc",
        "scopeName": "text.rfcdoc",
        "path": "./syntaxes/rfcdoc.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "RfcDoc Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/rfcdoc-dark-theme.json"
      },
      {
        "label": "RfcDoc Light",
        "uiTheme": "vs",
        "path": "./themes/rfcdoc-light-theme.json"
      }
    ],
    "commands": [
      {
        "command": "rfcdoc.formatDocument",
        "title": "RfcDoc: Format Document",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.generateTOC",
        "title": "RfcDoc: Generate Table of Contents",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.numberFootnotes",
        "title": "RfcDoc: Number Footnotes",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.fullFormatting",
        "title": "RfcDoc: Full Formatting",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.checkReferences",
        "title": "RfcDoc: Check References",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.exportAsHtml",
        "title": "RfcDoc: Export as HTML",
        "category": "RfcDoc"
      },
      {
        "command": "rfcdoc.fixNumbering",
        "title": "RfcDoc: Fix Numbering",
        "category": "RfcDoc"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:rfcdoc"
  ],
  "main": "./extension.js",
  "scripts": {
    "compile": "echo 'No compilation needed for JavaScript project'",
    "test": "node ./tests/runTest.js",
    "test:unit": "node ./tests/runTest.js unit",
    "test:integration": "node ./tests/runTest.js integration"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rfcdoc/rfcdoc-format.git"
  },
  "homepage": "https://github.com/rfcdoc/rfcdoc-format",
  "bugs": {
    "url": "https://github.com/rfcdoc/rfcdoc-format/issues"
  },
  "author": "RfcDoc Team",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "glob": "^10.3.10",
    "mocha": "^11.1.0",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
